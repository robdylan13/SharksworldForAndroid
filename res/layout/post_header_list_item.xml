<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="@dimen/list_item_vert_margin"
    android:layout_marginBottom="@dimen/list_item_vert_margin" >

    <TextView
        android:id="@+id/postHeaderTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="16dp"
        
        android:textAppearance="?android:attr/textAppearanceLarge" 
        android:fontFamily="sans-serif-condensed"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/postHeaderDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/postHeaderTitle"
        
        android:layout_marginBottom="4dp"
        android:textAppearance="?android:attr/textAppearanceSmall" 
        android:textColor="#6000"
        />
<TextView
        android:id="@+id/postHeaderComments"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/postHeaderTitle"
        
        android:layout_marginBottom="4dp"
        android:textAppearance="?android:attr/textAppearanceSmall" 
        android:textColor="#6000"
        />
</RelativeLayout>
